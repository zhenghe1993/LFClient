<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#d2691e" android:startColor="#d2691e" />

            <stroke android:width="2dp" android:color="#ffa500" />

            <corners android:radius="4dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="#d2691e" android:startColor="#d2691e" />

            <stroke android:width="2dp" android:color="#ffa500" />

            <corners android:radius="4dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/transparent" android:startColor="@color/transparent" />

            <stroke android:width="2dp" android:color="#fcd42d" />

            <corners android:radius="4dp" />
        </shape></item>

</selector>