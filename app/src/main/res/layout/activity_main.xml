<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_green"
    android:orientation="vertical" >


            <FrameLayout
                android:id="@+id/activity_main_page"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" >
            </FrameLayout>

            <!-- 底部菜单页面 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#808080"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <RadioGroup
                    android:id="@+id/activity_main_radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/background_green"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:weightSum="5" >

                    <RadioButton
                        android:id="@+id/activity_main_home_page"
                        style="@style/TabMenuText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:checked="true"
                        android:drawableTop="@drawable/main_page_touch"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="@string/homepage" />

                    <RadioButton
                        android:id="@+id/activity_main_discover"
                        style="@style/TabMenuText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:checked="false"
                        android:drawableTop="@drawable/main_discover_touch"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="@string/discover" />

                    <RadioButton
                        android:id="@+id/activity_main_gap"
                        style="@style/TabMenuText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center_horizontal" />

                    <RadioButton
                        android:id="@+id/activity_main_message"
                        style="@style/TabMenuText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:checked="false"
                        android:drawableTop="@drawable/main_message_touch"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="@string/message" />

                    <RadioButton
                        android:id="@+id/activity_main_mine"
                        style="@style/TabMenuText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:button="@null"
                        android:checked="false"
                        android:drawableTop="@drawable/main_mine_touch"
                        android:gravity="center_horizontal"
                        android:paddingBottom="5dip"
                        android:paddingTop="5dip"
                        android:text="@string/mine" />
                </RadioGroup>

                <ImageView
                    android:id="@+id/activity_main_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/main_plus_home_page"
                    android:visibility="visible" />
            </RelativeLayout>
</LinearLayout>