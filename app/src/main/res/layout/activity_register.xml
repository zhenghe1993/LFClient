<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/smssdk_register_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activity_register"
            android:layout_width="fill_parent"
            android:layout_height="55.0dip"
            android:background="#2f000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text="注册（3/3）"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/activity_register_back"
                android:layout_width="50.0dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="#2f000000"
                android:contentDescription="@null"
                android:duplicateParentState="true"
                android:src="@drawable/arrow_left_gray_white" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/activity_register_portrait"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:contentDescription="@null"
            android:src="@mipmap/register_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:text="点击设置头像"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/smssdk_input_bg_focus"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/activity_register_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@mipmap/register_nick"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/register_nick"
                android:ems="10"
                android:hint="昵称"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/smssdk_input_bg_focus"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/activity_register_PutInPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@mipmap/register_private"
                android:drawablePadding="10dp"
                android:drawableStart="@mipmap/register_private"
                android:ems="10"
                android:hint="请输入7-17位密码"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/smssdk_input_bg_focus"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/activity_register_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableLeft="@mipmap/register_private"
                    android:drawablePadding="10dp"
                    android:drawableStart="@mipmap/register_private"
                    android:ems="10"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff" />
            </LinearLayout>

            <ImageView
                android:id="@+id/activity_register_password_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:src="@mipmap/forget_password_confirm" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/activity_register_submit"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/text_orange_pink"
        android:text="完成注册"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>