<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ListView
            android:id="@+id/activity_location_list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:paddingTop="55dip" />

        <TextView
            android:id="@+id/activity_location_dialog"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:background="@drawable/show_head_toast_bg"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="30.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="end|center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dip"
                android:orientation="horizontal" >
            </LinearLayout>

            <com.tx.lfclient.cascade.SideBar
                android:id="@+id/activity_location_sidebar"
                android:layout_width="30.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="end|center" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/activity_location_relative"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#36cd00" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/activity_location_back"
                android:layout_width="50.0dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="#00808080"
                android:contentDescription="@null"
                android:src="@drawable/arrow_left_gray_white" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>