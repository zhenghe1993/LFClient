<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_green">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#36cd00">

        <TextView
            android:id="@+id/LFMessage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/LFMessage_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="#00808080"
            android:contentDescription="@null"
            android:src="@drawable/arrow_left_gray_white" />

        <TextView
            android:id="@+id/LFMessage_top_submit"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/normal_write_pressed_gray" />
    </RelativeLayout>

    <com.tx.lfclient.view.OverScrollView
        android:id="@+id/LFMessage_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="55dip"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="fill_vertical"
                    android:paddingEnd="0dp"
                    android:paddingLeft="5dip"
                    android:paddingRight="0dp"
                    android:paddingStart="5dp"
                    android:text="标题："
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/LFMessage_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_transparent_post"
                    android:hint="不超过15个字..."
                    android:maxLength="15"
                    android:maxLines="1"
                    android:scrollHorizontally="false"
                    android:textColor="#808080"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/LFMessage_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingEnd="0dp"
                        android:paddingLeft="5dip"
                        android:paddingRight="0dp"
                        android:paddingStart="5dp"
                        android:text="@string/LostTime"
                        android:textColor="#808080"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/LFMessage_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_transparent_post"
                        android:focusableInTouchMode="false"
                        android:hint="请选择丢失时间..."
                        android:maxLines="3"
                        android:paddingEnd="0dp"
                        android:paddingLeft="5dip"
                        android:paddingRight="0dp"
                        android:paddingStart="5dp"
                        android:selectAllOnFocus="true"
                        android:textColor="#808080"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/LFMessage_time_Button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dip"
                    android:background="@drawable/time_choose_orange_gray" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#d3d3d3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="60dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/LFMessage_locate_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingEnd="0dp"
                        android:paddingLeft="5dip"
                        android:paddingRight="0dp"
                        android:paddingStart="5dp"
                        android:text="@string/LostPlace"
                        android:textColor="#808080"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/LFMessage_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_transparent_post"
                        android:focusableInTouchMode="false"
                        android:hint="请标注丢失地点..."
                        android:maxLines="3"
                        android:paddingEnd="0dp"
                        android:paddingLeft="5dip"
                        android:paddingRight="0dp"
                        android:paddingStart="5dp"
                        android:selectAllOnFocus="true"
                        android:text=""
                        android:textColor="#808080"
                        android:textSize="16sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/LFMessage_locate_Button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/locate_blue_white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingLeft="5dip"
                    android:paddingRight="0dp"
                    android:paddingStart="5dp"
                    android:text="联系电话："
                    android:textColor="#808080"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/LFMessage_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_transparent_post"
                    android:inputType="phone"
                    android:maxLines="3"
                    android:scrollHorizontally="false"
                    android:selectAllOnFocus="true"
                    android:textColor="#808080"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="#d3d3d3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/LFMessage_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dip"
                    android:text="@string/choose_lost_type"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <GridView
                    android:id="@+id/LFMessage_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="50dp"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:numColumns="6"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LFMessage_introduction_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="失物简介："
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/LFMessage_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="100dip"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_transparent_post"
                    android:gravity="top"
                    android:maxLength="222"
                    android:paddingEnd="0dp"
                    android:paddingLeft="5dip"
                    android:paddingRight="0dp"
                    android:paddingStart="5dp"
                    android:selectAllOnFocus="true"
                    android:textColorHint="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="#ffffff"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/LFMessage_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#808080"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/222个字"
                    android:textColor="#808080"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="10dip"
                android:background="#d3d3d3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="5dip"
                    android:paddingRight="0dp"
                    android:paddingStart="5dp"
                    android:text="@string/PostPicture"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <GridView
                    android:id="@+id/LFMessage_pictures"
                    android:layout_width="290dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dip"
                    android:columnWidth="130dp"
                    android:descendantFocusability="blocksDescendants"
                    android:horizontalSpacing="2dp"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#d3d3d3" />

            <TextView
                android:id="@+id/LFMessage_submit"
                android:layout_width="match_parent"
                android:layout_height="45dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/text_orange_pink"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </com.tx.lfclient.view.OverScrollView>

</FrameLayout>
